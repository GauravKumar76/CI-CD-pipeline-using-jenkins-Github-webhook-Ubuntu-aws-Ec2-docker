pipeline {
    agent any

    environment {
        CONTAINER_NAME = "nestjs-app"
        IMAGE_NAME = "nestjs-image"
        EMAIL = "gauravkumardhanoura451278@gmail.com"
        PORT = "3000"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/GauravKumar76/CI-CD-pipeline-using-jenkins-Github-webhook-Ubuntu-aws-Ec2-docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Stop & Remove Old Container') {
            steps {
                sh '''
                docker stop $CONTAINER_NAME || true
                docker rm $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                sh '''
                docker run -d \
                -p $PORT:$PORT \
                --name $CONTAINER_NAME \
                $IMAGE_NAME
                '''
            }
        }

        stage('Send Email Notification') {
            steps {
                script {
                    try {
                        emailext(
                            subject: '‚úÖ NestJS App Deployed Successfully',
                            body: '''
Deployment Successful üöÄ

App URL:
http://52.212.75.215:3000/
''',
                            to: EMAIL
                        )
                    } catch (err) {
                        echo "‚ö†Ô∏è Email failed but deployment successful"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment completed successfully"
        }
        failure {
            echo "‚ùå Deployment failed"
        }
    }
}